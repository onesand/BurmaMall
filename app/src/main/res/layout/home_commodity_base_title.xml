<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/home_commodity_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Flash Deals"/>

        <TextView
            android:id="@+id/home_commodity_count_down_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/home_commodity_title_tv"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:textSize="16dp"
            android:text="04:55:01"/>

        <ImageView
            android:id="@+id/home_commodity_more_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_icon" />

    </RelativeLayout>

</LinearLayout>
