<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:auto="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="@color/white">

  <include
      layout="@layout/home_commodity_base_title" />

  <ImageView
      android:id="@+id/home_new_arrive_item_head"
      android:layout_width="match_parent"
      android:src="@mipmap/ic_launcher"
      android:layout_height="100dp" />

  <HorizontalScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:scrollbars="none"
      >
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

      <com.burmamall.burmamall.widget.HorizontalGridView
          android:id="@+id/home_new_arrive_gridview"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:verticalSpacing="13dp"
          android:stretchMode="columnWidth"
          android:layout_gravity="center"
          android:numColumns="3"
          android:horizontalSpacing="14dp"
          >
      </com.burmamall.burmamall.widget.HorizontalGridView>
    </LinearLayout>
  </HorizontalScrollView>

</LinearLayout>
